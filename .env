# .env
# Environment variables for GraphRAG Local QA Chat with Personas (with icons & logos)

# Coordinator base URL for the UI to call
COORD_URL=http://127.0.0.1:8000

# Local Ollama (make sure Ollama is running)
OLLAMA_BASE=http://localhost:11434
PERSONA_MODEL=llama3.1:8b
PERSONA_TEMPERATURE=0.1

# Persona JSON directory
PERSONA_DIR=personas

# Coordinator port
COORD_PORT=8000

