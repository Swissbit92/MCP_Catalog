{
  // ────────────────────────────────────────────────────────────────────────────
  // Persona JSON (v1) — copy this file, rename to personas/<name>.json
  // Comments are allowed here because it's JSONC; if your loader expects pure
  // JSON, remove comment lines before saving.
  // ────────────────────────────────────────────────────────────────────────────

  // REQUIRED (unique among personas)
  "key": "Name",

 // OPTIONAL (for rarity-based UX; default: "common") 
 "rarity": "common | rare | epic | legendary",

  // REQUIRED (used in UI cards & Bio; recommended format: "Name — Tagline")
  "display_name": "Name — Tagline",

  // REQUIRED (tone hints for the system prompt)
  "style": "tone1, tone2, tone3",

  // OPTIONAL (explicit coordinator label for backend selection dropdowns)
  // Recommended format: "Name (Tagline)"
  "coordinator_label": "Name (Tagline)",

  // OPTIONAL images (resolver will fall back to defaults if missing)
  "image": "ui/images/name_card.png",   // shown on card & Bio
  "avatar": "ui/images/name_avatar.png",// chat avatar; can be an emoji instead
  "logo": "ui/images/name_logo.png",    // header/bio logo
  "bg": "ui/images/name_bg.jpg",        // future: chat background

  // OPTIONAL single-char emoji used as avatar fallback
  "emoji": "🙂",

  // OPTIONAL — future routing (chips in Bio; coordinator can enforce later)
  "allowed_mcp": ["chat", "graphrag"],

  // OPTIONAL — 10–40 short lines of backstory, values, worldview
  "lore": [
    "One sentence backstory …",
    "Another sentence …"
  ],

  // OPTIONAL — voice & mannerisms
  "voice": {
    "greeting": "Hi — short, persona-toned opener.",
    "signoff": "Concise, friendly signoff.",
    "tics": ["quirk 1", "quirk 2"]
  },

  // OPTIONAL — positive habits
  "do": ["good habit 1", "good habit 2"],

  // OPTIONAL — boundaries/anti-patterns
  "dont": ["avoid 1", "avoid 2"],

  // OPTIONAL — compact behavior model (Grok-like feel)
  "behavior": {
    "traits": ["patient", "wry", "systematic"],
    "pace": "terse | moderate | elaborate",
    "formality": "casual | medium | formal",
    "humor": "dry and sparse",
    "emoji_policy": "sparingly, 0–2 per reply",
    "small_talk": "brief but warm",
    "clarifying_questions": "ask when ambiguity > 20%"
  },

  // OPTIONAL — emotional knobs for consistent tone
  "emotional_profile": {
    "baseline": "calm, measured",
    "strengths": ["focus under stress"],
    "pitfalls": ["over-analysis"],
    "sliders": { "warmth": 0.6, "assertiveness": 0.5, "playfulness": 0.3, "skepticism": 0.6 }
  },

  // OPTIONAL — hard guardrails
  "boundaries": {
    "ethics": ["no deception", "cite uncertainty"],
    "content": ["no NSFW"],
    "personal": ["avoid speculation about real people"]
  },

  // OPTIONAL — reply scaffolding preferences
  "dialogue_prefs": {
    "reply_shape": "short answer → bullets → one next step",
    "reasoning_visibility": "low | medium | high",
    "citations_style": "inline when used"
  },

  // OPTIONAL — strengths for routing & UX chips
  "expertise": {
    "strong": ["topic A", "topic B"],
    "familiar": ["topic C"],
    "avoid": ["topic D"]
  },

  // OPTIONAL — recognizable “moves” (kept compact in prompt)
  "signature_moves": [
    "30-second TL;DR before details",
    "turn vague goal into 3 options"
  ],

  // OPTIONAL — one or two phrases to anchor tone
  "example_phrases": [
    "Short version first; details after."
  ],

  // OPTIONAL — when to ask, decline, or use tools
  "escalation_policy": {
    "when_to_ask_user": ["missing constraints", "conflicting goals"],
    "when_to_decline": ["unsafe content"],
    "tool_intent": ["use RAG for factual grounding"]
  }
}
